uchar data eer_int;       //收到TC35模块来的错识代码计数器
//uchar data sync_count;		//用于TC35控制的计数器
//uchar data Pick_count ;
//uchar data Ring_count;
#define _Nop()    _nop_()
//位变量
bit hsk1_pin_flag;
